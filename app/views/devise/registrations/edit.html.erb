<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <br>
  <%= f.error_notification :class => 'error_notification' %>
  <br>

  <div class="form-inputs">

    <%= f.input :name, :required => true, :autofocus => true %><br>
    <%= f.input :email, :required => true %><br>
    <%= f.input :contact_no, :required => true %><br>
    <%= f.label :address %><br><%= f.text_area :address,  size: "30x5", :required => true %><br>
    <%= f.label :avatar %><%= f.file_field :avatar %><br>
    <%= f.input :password, :autocomplete => "off", :hint => "(leave it blank if you don't want to change it)", :required => false %><br>
    <%= f.input :password_confirmation, :required => false %><br>
    <%= f.input :current_password, :hint => "(we need your current password to confirm your changes)", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
