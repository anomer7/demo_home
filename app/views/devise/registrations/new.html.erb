<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <br>
  <%= f.error_notification :class => 'error_notification' %>
  <br>

  <div class="form-inputs">
  	<%= f.input :name, :required => true, :autofocus => true %><br>
    <%= f.input :email, :required => true %><br>
    <%= f.input :contact_no, :required => true %><br>
    <%= f.label :address %><br><%= f.text_area :address, size: "30x5", :required => true %><br>
    <%= f.label :avatar %><%= f.file_field :avatar %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
